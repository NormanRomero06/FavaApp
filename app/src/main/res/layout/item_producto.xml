<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwPrducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/favaslogo" />

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/nombre_producto"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="52dp"
                android:text="@string/cs_0_00"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/tvCantProd"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_menos" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="185dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_mas" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>