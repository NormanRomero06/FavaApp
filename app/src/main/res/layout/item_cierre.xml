<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwPrducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/favaslogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Fecha de Cierre:"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/crimson_text_bold"
                android:text="Fecha"
                android:textColor="@color/boton"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Total en Caja:"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTotalCaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/crimson_text_bold"
                android:text="Total"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>