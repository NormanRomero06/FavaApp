<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwPrducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/favaslogo" />

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/nombre_producto"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/IvDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/delete_24"
                />

            <TextView
                android:id="@+id/tvPrecioTotal"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="52dp"
                android:text="@string/cs_0_00"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvCantProdTotal"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvidProd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/id"
                android:layout_marginTop="75dp"
                android:layout_marginStart="255dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvPUnitario"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/id"
                android:layout_marginTop="75dp"
                android:layout_marginStart="255dp"
                android:visibility="visible"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>