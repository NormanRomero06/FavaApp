<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="460dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwPagos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDolar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/dolar" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"
                android:text="@string/descripcion_egresos"
                android:fontFamily="@font/crimson_text_regular"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="35dp"
                android:text="@string/descripcion_egresos"
                android:fontFamily="@font/crimson_text_regular"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="80dp"
                android:text="@string/montoitem"
                android:fontFamily="@font/crimson_text_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvMonto0"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="80dp"
                android:text="@string/_0"
                android:fontFamily="@font/crimson_text_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="130dp"
                android:text="Fecha:"
                android:fontFamily="@font/crimson_text_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="130dp"
                android:text="0000/00/00 22:22:22"
                android:fontFamily="@font/crimson_text_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="380dp"
                android:layout_marginTop="75dp"
                android:text="@string/_0"
                android:fontFamily="@font/crimson_text_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imvBorrar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="410dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/quitar" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>