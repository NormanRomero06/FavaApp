<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".ui.inventario.AgregarInventarioFragment">

    <View
        android:id="@+id/VwInventario"
        android:layout_width="800dp"
        android:layout_height="700dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_shape_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAgregarInventario"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/crimson_text_bold"
        android:text="@string/agregar_inventario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/VwInventario"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toTopOf="@id/VwInventario" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/crimson_text_bold"
        android:text="ID: "
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/VwInventario"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvIdProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/crimson_text_bold"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Nombre: "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toBottomOf="@id/tvID" />


    <TextView
        android:id="@+id/tvNombreArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Prueba"
        android:textColor="@color/black"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toBottomOf="@id/tvNombre" />

    <Spinner
        android:id="@+id/spEntSal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toBottomOf="@id/tvNombreArticulo"

        />

    <TextView
        android:id="@+id/tvCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="Cantidad:"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/VwInventario"
        app:layout_constraintTop_toBottomOf="@+id/spEntSal" />

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@id/tvCant"
        app:layout_constraintTop_toBottomOf="@id/tvCant" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnActualizar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/back"
        android:fontFamily="@font/crimson_text_bold"
        android:text="Actualizar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>