<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cwCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivCategoria"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/favaslogo" />

                        <TextView
                            android:id="@+id/tvNombreCategoria"
                            android:layout_width="150dp"
                            android:layout_marginTop="40dp"
                            android:layout_height="30dp"
                            android:text="@string/nombre"
                            android:textAlignment="center"
                            android:fontFamily="@font/crimson_text_regular"
                            android:textSize="25dp"
                            android:textColor="@color/boton"
                            android:layout_marginStart="120dp"
                            />

                        <TextView
                            android:id="@+id/tvIdCat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:textSize="30sp"
                            android:text="@string/_0"
                            android:fontFamily="@font/crimson_text_regular"
                            android:textAlignment="center"
                            android:visibility="invisible"
                            android:textColor="@color/boton"
                            android:layout_marginStart="220dp"
                            android:layout_marginTop="90dp"
                            />


                </RelativeLayout>


        </androidx.cardview.widget.CardView>

</LinearLayout>