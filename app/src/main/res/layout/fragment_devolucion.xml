<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        tools:context=".ui.devolucion.DevolucionFragment">

        <View
            android:id="@+id/VwDevolucion"
            android:layout_width="520dp"
            android:layout_height="750dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_shape_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvDevolucion"
            android:layout_width="450dp"
            android:layout_height="600dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@id/VwDevolucion"
            app:layout_constraintStart_toStartOf="@id/VwDevolucion"
            app:layout_constraintTop_toTopOf="@id/VwDevolucion" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>