<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="180dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwArticuloInforme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivArticulo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/favaslogo" />

            <!-- No se muestra -->
            <TextView
                android:id="@+id/tvIdProducto"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:text="ID"
                android:textColor="@color/boton"
                android:textSize="15sp"
                android:visibility="invisible" />

            <!-- No se muestra -->
            <TextView
                android:id="@+id/tvCantidadMinima"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:text="ID"
                android:textColor="@color/boton"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="10dp"
                android:text="Nombre:"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNombreArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="50dp"
                android:text="Existencias:"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvExistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="50dp"
                android:text="0"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="90dp"
                android:text="Precio:"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrecioArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="90dp"
                android:text="0.00"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!-- No se muestra -->
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="0.00"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="130dp"
                android:text="Categoria:"
                android:textColor="@color/boton"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="130dp"
                android:text="Categoria"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>