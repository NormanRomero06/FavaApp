<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwPrducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProducto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/favaslogo" />

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/nombre_producto"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCantidadVendida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Cantidad Vendida"
                android:textColor="@color/boton"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvPrecioUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Precio Unitario"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTotalDetalleVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Total Detalle Venta"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCodigoVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="CÃ³digo de Venta"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTotalVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Total Venta"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="Usuario"
                android:textAlignment="center"
                android:textColor="@color/boton"
                android:textSize="15sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>