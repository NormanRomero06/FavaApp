<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivArticulo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/favaslogo" />

            <TextView
                android:id="@+id/tvIdProducto"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="ID"
                android:textColor="@color/boton"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvCantidadMinima"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/id"
                android:textColor="@color/boton"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvNombreArticulo"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"
                android:text="@string/nombre"
                android:textColor="@color/boton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvExistencia"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrecioArticulo"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/_0_00"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="@string/_0_00"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/crimson_text_regular"
                android:text="0.00"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:visibility="invisible" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>