<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        tools:context=".ui.Categoria.CrearCategoriaFragment">

        <View
            android:id="@+id/VwPagos"
            android:layout_width="720dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_shape_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_CrearCategoria"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/crimson_text_bold"
            android:text="@string/crear_categoria"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@id/VwPagos"
            app:layout_constraintStart_toStartOf="@id/VwPagos"
            app:layout_constraintTop_toTopOf="@id/VwPagos" />

        <EditText
            android:id="@+id/etNombreCategoria"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:autofillHints=""
            android:backgroundTint="@color/black"
            android:fontFamily="@font/crimson_text_regular"
            android:hint="@string/nombre_de_la_categoria"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48sp"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/VwPagos"
            app:layout_constraintStart_toStartOf="@id/VwPagos"
            app:layout_constraintTop_toBottomOf="@id/tv_CrearCategoria" />

        <TextView
            android:id="@+id/img_categoria"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/crimson_text_semibold"
            android:text="@string/imagen_de_la_categoria"
            android:textAlignment="center"
            android:textColor="@color/boton"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/VwPagos"
            app:layout_constraintStart_toStartOf="@id/VwPagos"
            app:layout_constraintTop_toBottomOf="@id/etNombreCategoria" />

        <ImageView
            android:id="@+id/ivCrearCategoria"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray"
            android:contentDescription="@string/imagen_de_la_categoria"
            app:layout_constraintEnd_toEndOf="@id/VwPagos"
            app:layout_constraintStart_toStartOf="@id/VwPagos"
            app:layout_constraintTop_toBottomOf="@+id/img_categoria" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarCategoria"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/crimson_text_bold"
            android:text="@string/guardar_categoria"
            android:textColor="@color/boton"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/VwPagos"
            app:layout_constraintStart_toStartOf="@id/VwPagos"
            app:layout_constraintTop_toBottomOf="@id/ivCrearCategoria" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>