<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Categoria.CrearCategoriaFragment"
    android:background="@color/back">

    <View
        android:id="@+id/VwPagos"
        android:layout_width="720dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_shape_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_CrearCategoria"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:text="Crear Categoría"
        android:textAlignment="center"
        android:fontFamily="@font/crimson_text_bold"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombreCategoria"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:minHeight="48sp"
        android:autofillHints=""
        android:fontFamily="@font/crimson_text_regular"
        android:backgroundTint="@color/black"
        android:hint="Nombre de la Categoría"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_CrearCategoria" />

    <TextView
        android:id="@+id/img_categoria"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Imagen de la categoría"
        android:textAlignment="center"
        android:textColor="@color/boton"
        android:fontFamily="@font/crimson_text_semibold"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNombreCategoria" />

    <ImageView
        android:id="@+id/ivCrearCategoria"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_categoria" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardarCategoria"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_shape"
        android:text="Guardar Categoría"
        android:fontFamily="@font/crimson_text_bold"
        android:textSize="16sp"
        android:textColor="@color/boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCrearCategoria" />


</androidx.constraintlayout.widget.ConstraintLayout>